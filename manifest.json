{
  "manifest_version": 3,
  "name": "HyperNFT",
  "version": "1.0.1",
  "description": "Create and mint AI-generated NFTs on Solana. Transform text prompts into unique digital artwork.",
  "permissions": [
    "storage",
    "activeTab",
    "background",
    "notifications",
    "alarms",
    "webRequest"
  ],
  "host_permissions": [
    "https://api.solana.com/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://arweave.net/*",
    "https://ipfs.io/*",
    "https://metaplex.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "css": ["src/content/content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "HyperNFT - AI NFT Generator",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/injected/*.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "src/options/options.html"
}
