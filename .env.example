# Lemora Environment Configuration
# Copy this file to .env and fill in your values

# API Keys
HELIUS_API_KEY=your_helius_api_key_here
BIRDEYE_API_KEY=your_birdeye_api_key_here
JUPITER_API_KEY=your_jupiter_api_key_here

# Solana RPC Endpoints
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
SOLANA_WS_ENDPOINT=wss://api.mainnet-beta.solana.com

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10
WS_PING_INTERVAL=30000

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
ENABLE_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DELAY=1000

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.lemora.dev
ANALYTICS_API_KEY=your_analytics_key

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true
NOTIFICATION_DESKTOP=true

# Security
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=your_encryption_key_here
SESSION_TIMEOUT=3600000

# Development
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info

# Extension Settings
EXTENSION_ID=palgoflfolpnoclcllfnjgnmddcmebpj
CHROME_STORE_URL=https://chromewebstore.google.com/detail/lemora/palgoflfolpnoclcllfnjgnmddcmebpj

# API Endpoints
API_BASE_URL=https://api.lemora.dev
WEBHOOK_URL=https://webhooks.lemora.dev

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false
ENABLE_AI_PREDICTIONS=true
ENABLE_WALLET_CLUSTERING=true

# Performance
MAX_CONCURRENT_CONNECTIONS=10
REQUEST_TIMEOUT=30000
BATCH_SIZE=50

# Database (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/lemora
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_key_here
